<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.floragunn</groupId>
    <artifactId>search-guard-parent</artifactId>
    <version>6.22.0</version>
  </parent>

  <groupId>com.floragunn</groupId>
  <artifactId>search-guard-kibana-plugin</artifactId>
  <packaging>pom</packaging>
  <version>RPLC_PLUGIN_VERSION</version>
  <!-- <version>6.7.0-18.1-SNAPSHOT</version> -->
  <name>Search Guard Kibana Plugin</name>
  <description>Search Guard Kibana Plugin for Elasticsearch 6</description>
  <url>https://github.com/floragunncom/search-guard</url>
  <inceptionYear>2016</inceptionYear>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <properties>
    <plugin.descriptor>${basedir}/plugin.xml</plugin.descriptor>
  </properties>

  <scm>
    <url>https://github.com/floragunncom/search-guard-kibana-plugin</url>
    <connection>scm:git:git@github.com:floragunncom/search-guard-kibana-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:floragunncom/search-guard-kibana-plugin.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/floragunncom/search-guard-kibana-plugin/issues</url>
  </issueManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>plugin</id>
            <phase>package</phase>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <outputDirectory>${project.build.directory}/releases/</outputDirectory>
              <descriptors>
                <descriptor>${plugin.descriptor}</descriptor>
              </descriptors>
            </configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
